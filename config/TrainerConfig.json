{
  "MODEL_NAME": "Qwen/Qwen3-4B-Thinking-2507",
  "MAX_TOKENS": 2048,

  "LORA_CONFIG": {
    "r": 32,
    "lora_alpha": 64,
    "lora_dropout": 0.05,
    "bias": "none",
    "task_type": "CAUSAL_LM",
    "target_modules": [
      "q_proj",
      "k_proj",
      "v_proj",
      "o_proj",
      "gate_proj",
      "up_proj",
      "down_proj"
    ]
  },

  "SFT_CONFIG": {
    "output_dir": "./results/qwen3-5b",
    "num_train_epochs": 1,
    "per_device_train_batch_size": 2,
    "gradient_accumulation_steps": 4,
    "learning_rate": 0.0002,
    "bf16": true,
    "fp16": false,
    "logging_steps": 10,
    "save_strategy": "epoch",
    "optim": "paged_adamw_32bit",
    "report_to": "none",
    "max_seq_length": 1536,
    "packing": false
  },
  
  "train_file": "data/processed/train_data_final.jsonl",

  "test_file": "data/processed/test_data_final.jsonl",

  "eval_file": "data/processed/dev_data_final.jsonl",

  "CHECKPOINT": null
}